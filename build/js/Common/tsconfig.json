{
    "compilerOptions": {
        //Type checking
        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "exactOptionalPropertyTypes": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        //Compiler options
        "module": "None",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "paths": {
            "/tinymce/*": [
                "../../vendor/tinymce/tinymce/*"
            ],
            "/assets/controllers/*": [
                "../public/assets/controllers/*"
            ],
            "*": [
                "/js/Pages/*",
                "../../*"
            ]
        },
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "../../",
        "sourceRoot": "/",
        "removeComments": true,
        "outDir": "../../../public/assets/",
        "outFile": "../../../public/assets/app.js",
        "explainFiles": true,
        "listFiles": true,
        //Other settings
        "allowJs": true,
        "checkJs": true,
        "composite": true,
        "noErrorTruncation": true,
        "lib": [
            "esnext",
            "dom",
            "WebWorker",
            "dom.iterable"
        ]
    },
    "files": [
        "../../../vendor/tinymce/tinymce/tinymce.min.js",
        "../../../vendor/tinymce/tinymce/tinymce.d.ts"
    ],
    //Include only .ts files in the same dir
    "include": [
        "./*.ts",
        "./CustomElements/*.ts",
        "./CustomElements/*/*.ts"
    ],
    "exclude": [
        "*node_modules*"
    ],
    "references": [
        {
            "path": "../Pages/tsconfig.json"
        }
    ]
}
<select-custom>
    <div class="select_wrapper">
        <img loading="lazy" decoding="async" alt="Icon for " src="/assets/images/noimage.svg" class="select_icon hidden">
        <div class="float_label">
            <select aria-required="{% if required == true %}true{% else %}false{% endif %}"{% if required == true %} required{% endif %} name="{{ input_name }}" id="{{ form_name }}_select_{{ input_name }}">
                {% for item in items %}
                    <option{% if item.value == selected or item.name == selected %} selected{% endif %} value="{{ item.value }}"{% if item.description %} data-description="{{ item.description }}"{% endif %}{% if item.icon %} data-icon="{{ item.icon }}"{% endif %}>{{ item.name }}</option>
                {% endfor %}
            </select>
            <label for="{{ form_name }}_select_{{ input_name }}">{{ placeholder }}</label>
        </div>
    </div>
    <div class="select_description hidden"></div>
</select-custom>

<section>
    <article class="margin_05rem">
        <details {% if not subservice_name %}class="persistent" open{% endif %}>
            <summary class="right_summary about_section">About</summary>
            <p>Here you can find all forums, blogs and similar sections, that are meant for different types of communication.</p>
        </details>
    </article>
    {% if subservice_name == 'search' %}
        {{ include('common/elements/search.twig') }}
    {% endif %}
    {% if subservice_name %}
        {% if subservice_name == 'user' and subservice_name == 'search' %}
            <article class="margin_05rem">
                {% if subservice_name == 'search' %}
                    {{ include('common/pages/search.twig') }}
                {% elseif subservice_name == 'user' %}
                    {{ include('talks/user.twig') }}
                {% endif %}
            </article>
        {% else %}
            {% if subservice_name == 'thread' %}
                {{ include('talks/thread.twig') }}
            {% elseif subservice_name == 'section' %}
                {{ include('talks/section.twig') }}
            {% elseif subservice_name == 'post' %}
                {{ include('talks/post.twig') }}
            {% endif %}
        {% endif %}
    {% endif %}
</section>

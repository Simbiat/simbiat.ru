<tr class="middle">
    <td>{{ email.email|default('email') }}</td>
    <td>
        {% if not email or email.activation %}<input type="button" value="Confirm" class="mail_activation" data-email="{{ email.email }}"><img loading="lazy" decoding="async" class="hidden spinner inline" src="/assets/images/spinner.svg" alt="Activating {{ email.email }}...">{% else %}<span class="mail_confirmed">âœ…</span>{% endif %}
    </td>
    <td{% if not email or email.activation %} class="warning"{% endif %}>{% if not email or email.activation %}Confirm address to change setting{% else %}<span class="float_label"><input id="subscription_checkbox_{{ number }}" class="mail_subscription" data-email="{{ email.email }}" type="checkbox"{% if email.subscribed %} checked{% endif %}><label for="subscription_checkbox_{{ number }}"></label></span><img loading="lazy" decoding="async" class="hidden spinner inline" src="/assets/images/spinner.svg" alt="Changing subscription for {{ email.email }}...">{% endif %}</td>
    <td>
        <input class="mail_deletion" data-email="{{ email.email }}" type="image" src="/assets/images/close.svg" {% if email and ((email.activation and count_activated == 0) or (not email.activation and (emails|length < 2 or count_activated < 2))) %}disabled alt="Can't delete" {% else %}alt="Delete {{ email.email|default('email') }}"{% endif %}><img class="hidden spinner inline" src="/assets/images/spinner.svg" alt="Removing {{ email.email|default('email') }}...">
    </td>
</tr>

{
    "compilerOptions": {
        //Type checking
        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "exactOptionalPropertyTypes": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        //Compiler options
        "module": "None",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "baseUrl": ".",
        "paths": {
            "/js/tinymce/*": ["../../composer/vendor/tinymce/tinymce/*"],
            "*": ["/js/Pages/*", "../../*"]
        },
        "sourceMap": true,
        "rootDir": "../../",
        "sourceRoot": "/js/Common/",
        "removeComments": true,
        "outDir": "../",
        "outFile": "../main.js",
        "explainFiles": true,
        "listFiles": true,
        //Other settings
        "allowJs": true,
        "checkJs": true,
        "composite": true,
        "noErrorTruncation": true,
        "lib": ["esnext", "dom", "WebWorker", "dom.iterable"]
    },
    "files": [
        "../../composer/vendor/tinymce/tinymce/tinymce.min.js",
        "../../composer/vendor/tinymce/tinymce/tinymce.d.ts"
    ],
    //Include only .ts files in the same dir
    "include": [
        "./*.ts",
        "./CustomElements/*.ts",
        "./CustomElements/*/*.ts"
    ],
    "exclude": [
        "*node_modules*"
    ],
    "references": [
        {"path":  "../Pages/tsconfig.json"}
    ]
}

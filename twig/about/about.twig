<section>
    <article class="margin05rem">
        <details {% if not subServiceName %}class="persistent" open{% endif %}>
            <summary class="rightSummary aboutSection">About</summary>
            <p>This is the section, where you can learn about {{ site_name }}.</p>
            {% if not subServiceName %}
                <p>Select one of the links below to learn more about:</p>
                <ul>
                    <li><a href="/about/tech/" target="_self" itemprop="url"><span itemprop="name">Technology</span></a></li>
                    <li><a href="/about/tos/" target="_self" itemprop="url"><span itemprop="name">Terms of Service</span></a></li>
                    <li><a href="/about/privacy/" target="_self" itemprop="url"><span itemprop="name">Privacy Policy</span></a></li>
                    <li><a href="/about/security/" target="_self" itemprop="url"><span itemprop="name">Security Policy</span></a></li>
                    <li><a href="/talks/sections/7/" target="_self" itemprop="url"><span itemprop="name">Changelog</span></a></li>
                </ul>
            {% endif %}
        </details>
    </article>
    {% if subServiceName %}
        <article class="margin05rem">
            {% if subServiceName == 'tech' %}
                {{ include('about/tech.twig') }}
            {% elseif subServiceName == 'tos' %}
                {{ include('about/tos.twig') }}
            {% elseif subServiceName == 'privacy' %}
                {{ include('about/privacy.twig') }}
            {% elseif subServiceName == 'security' %}
                {{ include('about/security.twig') }}
            {% endif %}
        </article>
    {% endif %}
</section>

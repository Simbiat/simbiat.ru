<meta charset="UTF-8" />
<meta name="Content-Type" content="text/html; charset=UTF-8" />

<!-- General Meta -->
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="description" content="{{ ogdesc }}" />
<meta name="theme-color" media="(prefers-color-scheme: dark)" content="#2e293d">

<!-- Author Meta -->
<meta name="author" content="Dmitry Kustov" />
<link rel="author" href="https://www.facebook.com/simbiat19"/>

<!-- Google Meta -->
<meta itemprop="name" content="{{ title }}">
<meta itemprop="description" content="{{ ogdesc }}" />
<meta itemprop="image" content="{{ ogimage }}">

<meta name="X-CSRFToken" content="{{XCSRFToken}}" />
<!-- Custom meta tag to indicate whether Save-Data header was received -->
<meta name="save_data" content="{{save_data}}" />

<!-- FaceBook IDs -->
<meta property="fb:app_id" content="{{ facebook.appid }}"/>
<meta property="fb:admins" content="{{ facebook.adminid }}"/>

<!-- Open Graph Protocol -->
<meta property="og:site_name" content="{{site_name}}" />
<meta property="og:title" content="{{ title }}" />
<meta property="og:description" content="{{ ogdesc }}" />
<meta property="og:url" content="{{ url }}" />
<meta property="og:image" content="{{ ogimage }}" />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
{%if not ogtype%}
    <meta property="og:type" content="website" />
{% else %}
    <meta property="og:type" content="{{ ogtype }}" />
{%endif%}
{{ ogextra|raw }}

<!-- Twitter Card -->
<meta name="twitter:card" content="summary" />
<meta name="twitter:title" content="{{ title }}" />
<meta name="twitter:site" content="@{{ twitter_card.name }}" />
<meta name="twitter:site:id" content="{{ twitter_card.id }}" />
<meta name="twitter:creator" content="@{{ twitter_card.name }}" />
<meta name="twitter:creator:id" content="{{ twitter_card.id }}" />
<meta name="twitter:description" content="{{ ogdesc }}" />
<meta name="twitter:image" content="{{ domain }}/img/favicons/simbiat.png" />
<meta name="twitter:image:alt" content="{{site_name}} logo" />

<!-- MS Tiles -->
<meta name="application-name" content="{{ site_name }}" />
<meta name="msapplication-navbutton-color" content="#000000" />
<meta name="msapplication-TileColor" content="#2e293d" />
<meta name="msapplication-square70x70logo" content="{{ domain }}/img/favicons/mstile/70x70.png" />
<meta name="msapplication-square150x150logo" content="{{ domain }}/img/favicons/mstile/150x150.png" />
<meta name="msapplication-square310x310logo" content="{{ domain }}/img/favicons/mstile/310x310.png" />
<meta name="msapplication-wide310x150logo" content="{{ domain }}/img/favicons/mstile/310x150.png" />
<meta name="msapplication-TileImage" content="{{ domain }}/img/favicons/mstile/144x144.png" />
<meta name="msapplication-tooltip" content="Simbiat Software" />
<meta name="msapplication-starturl" content="{{ domain }}" />
<meta name="msapplication-window" content="width=800;height=600" />
<meta name="msapplication-allowDomainApiCalls" content="true" />
<meta name="msapplication-allowDomainMetaTags" content="true" />
<meta name="msapplication-config" content="/browserconfig.xml" />
<meta name="msapplication-tap-highlight" content="no" />

<!-- Web Apps -->
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
<meta name="apple-mobile-web-app-title" content="{{site_name}}" />

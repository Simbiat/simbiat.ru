<article class="post{% if post.nouser == true %} nouser{% endif %}">
    <section class="post_header">
        {% if post.noname != true %}
            {% if post.detailedType == 'Changelog' and is_numeric(post.name) %}
                <div class="post_name"><a href="/talks/threads/{{ post.threadid }}">{{ timeTag(post.name, "Y.m.d") }}</a></div>
            {% else %}
                <div class="post_name"><a href="/talks/threads/{{ post.threadid }}/{{ prettyURL(post.name) }}" data-tooltip="{{ post.name }}">{{ post.name }}</a></div>
            {% endif %}
        {% endif %}
        <div class="post_time_id">
            {{ timeTag(post.created, "d/m/Y H:i", "post_time") }}
            {% if post.nopostid != true %}
                <div class="post_id_wrapper">
                    <h2 class="post_id" id="post_{{ post.id }}">#{{ post.id }}</h2>
                    <a class="post_id_link" target="_blank" href="/talks/posts/{{ post.id }}"></a>
                </div>
            {% endif %}
        </div>
    </section>
    {% if post.nouser != true %}
        <section class="post_user">
            <div class="post_username"><a href="/talks/users/{{ post.createdby }}">{{ post.createdby_name }}</a></div>
            <div class="post_avatar"><img loading="lazy" decoding="async" alt="{{ post.createdby_name }}" src="{{ post.avatar }}" class="avatar"></div>
        </section>
    {% endif %}
    {% if post.htmlcut == true %}
        {% if post.type == 'Changelog' or post.detailedType == 'Changelog' %}
            <section class="post_text">{{ sanitize(changelog(preg_replace(htmlCut(post.text), '/‚Ä¶$/ui', '<a href="/talks/threads/' ~ post.threadid ~ '">‚Ä¶</a>'))) }}</section>
        {% else %}
            <section class="post_text">{{ sanitize(nl2p(preg_replace(htmlCut(post.text), '/‚Ä¶$/ui', '<a href="/talks/threads/' ~ post.threadid ~ '/' ~ prettyURL(post.name) ~ '">‚Ä¶</a>'))) }}</section>
        {% endif %}
    {% else %}
        {% if post.type == 'Changelog' or post.detailedType == 'Changelog' %}
            <section class="post_text">{{ sanitize(changelog(post.text)) }}</section>
        {% else %}
            <section class="post_text">{{ sanitize(nl2p(post.text)) }}</section>
        {% endif %}
    {% endif %}
    <section class="post_footer">
        <like-dis data-postid="{{ post.id }}" data-liked="{% if post.liked is null %}0{% else %}{{ post.liked }}{% endif %}">
            <input type="button" value="üëç" class="like_button"{% if 'canLike' not in session_data.permissions %} disabled{% endif %} data-tooltip="{% if post.liked > 0 %}Remove like{% else %}Like{% endif %}">
            <span class="likes_count{% if post.liked > 0 %} success{% endif %}">{{ post.likes }}</span>
            <input type="button" value="üëé" class="dislike_button"{% if 'canLike' not in session_data.permissions %} disabled{% endif %} data-tooltip="{% if post.liked < 0 %}Remove dislike{% else %}Dislike{% endif %}">
            <span class="dislikes_count{% if post.liked < 0 %} failure{% endif %}">{{ post.dislikes }}</span>
            <img loading="lazy" decoding="async" class="hidden inline spinner" src="/img/spinner.svg" alt="Registering preference...">
        </like-dis>
        <div class="post_icons">
            {% if post.created|date('U') > 'now'|date('U') %}<span data-tooltip="Scheduled post">‚è≤</span>{% endif %}
            {% if post.locked and 'editLocked' in session_data.permissions %}<span data-tooltip="Locked post">üîí</span>{% endif %}
            {% if post.private %}<span data-tooltip="Private post">‚õî</span>{% endif %}
            {% if post.system and 'removeSystem' in session_data.permissions %}<span data-tooltip="System post">üö´</span>{% endif %}
        </div>
        {% if post.noeditedtime != true %}
            <div class="post_edited">{% if post.updated > post.created %}Edited {{ timeTag(post.updated, "d/m/Y H:i", "post_time") }} by <a href="/talks/users/{{ post.updatedby }}">{{ post.updatedby_name }}</a>{% endif %}</div>
        {% endif %}
    </section>
</article>

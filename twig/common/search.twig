{# Set link variable based on type #}
{% if service_name == 'bictracker' %}
    {% set actionURL = '/bictracker/search/' %}
{% else %}
    {% set actionURL = '/search/' %}
{% endif %}
{# Render the form itself #}
<section>
    {% if service_name == 'bictracker' %}
        <p>Введите БИК, корреспондентский счёт, имя банка, его адрес или регистрационный номер.</p>
    {% endif %}
    <form role="search" class="searchForm" data-baseURL="{{ actionURL }}" action="">
        <span class="float_label_div" id="searchLabel"><input id="searchField" role="searchbox" type="search" inputmode="search" autocomplete="on" maxlength="100"{% if searchvalue is defined %} value="{{searchvalue}}"{% else %} autofocus{% endif %}><label for="searchField">{% if service_name == 'bictracker' %}Термин для поиска{% else %}Search term{% endif %}</label></span>
        <input role="button" type="submit" id="search" value="{% if service_name == 'bictracker' %}Поиск{% else %}Search{% endif %}">
    </form>
</section>
<section>
    {% if service_name == 'bictracker' %}
        <p class="relative">Библиотека обновлена <time datetime="{{ bidDate|date('Y-m-d') }}">{{ bidDate|date('d.m.Y') }}</time>.<input class="refresh" id="bicRefresh" alt="Обновить библиотеку" data-tooltip="Обновить библиотеку" type="image" src="/img/refresh.svg"></p>
    {% endif %}
    {% for type, subResult in searchresult %}
        <p>
            {% if type == 'openBics' %}
                Открытых БИК:
            {% elseif type == 'closedBics' %}
                Закрытых БИК:
            {% endif %}
            {% if subResult.count>subResult.results|length %}
                {# Set list link #}
                {% if type == 'openBics' %}
                    {% set listURL = '/bictracker/open/' %}
                {% elseif type == 'closedBics' %}
                    {% set listURL = '/bictracker/closed/' %}
                {% endif %}
                {# Show link itself #}
                <a href="{{ listURL }}{{ searchvalue }}">{{ subResult.count }}</a>
            {% else %}
                {{ subResult.count }}
            {% endif %}
        </p>
        <div class="searchResults">
            {% for entity in subResult.results %}
                {{ include('common/entitycard.twig', entity) }}
            {% endfor %}
        </div>
    {% endfor %}
</section>

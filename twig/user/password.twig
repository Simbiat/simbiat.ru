<article class="article-content" id="user_dash">
    {%if miss_user%}
        <div class="miss_user">No or wrong user ID is provided</div>
    {%else%}
        {%if usercp%}
            {%include('user/navigation.twig') with {'usercptype': 'edit'} %}
            {%include('user/editsubcats.twig') with {'usercptype': 'password'} %}
            <form id="cp_password" action="/user/{{user.userid}}/password/" method="post">
                {%if edit_result is defined%}
                    <span class="{%if edit_result%}success{%else%}error{%endif%}">Update {%if edit_result%}successful{%else%}failed{%endif%}</span>
                {%endif%}
                <p><h3>Change password:</h3></p>
                <input id="new_login" name="cp_password[login]" type="hidden" value="{{user.username}}" disabled required>
                <input id="new_email" name="cp_password[email]" type="hidden" value="{{user.email}}" disabled required>
                <p><input id="cp_curpass" name="cp_password[current]" type="password" placeholder="Current password" required></p>
                <p><input id="new_password" name="cp_password[new_password]" type="password" placeholder="New password" required><span id="passcheck"></span></p>
                <p><input id="new_password2" name="cp_password[new_password2]" type="password" placeholder="Confirm password" required><span id="passcheck2"></span></p>
                <p class="floatclear"><input type="submit" value="Save"><input type="reset"></p>
            </form>
        {%else%}
            {{ include('no_access.twig')}}
        {%endif%}
    {%endif%}
</article>

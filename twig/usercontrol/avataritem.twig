<li id="{{ avatar.fileid|default('hash') }}">
    <span class="radio_and_label">
        <input id="avatar_{{ avatar.fileid|default('hash') }}" type="radio"{% if avatar.current %} checked{% endif %}>
        <label for="avatar_{{ avatar.fileid|default('hash') }}">
            <img loading="lazy" decoding="async" alt="Avatar {{ number }}" src="{{ avatar.url }}" class="avatar">
        </label>
    </span>
    <input id="del_{{ avatar.fileid|default('hash') }}" alt="Delete avatar" type="image" class="delete_avatar{% if avatar and avatar.current %} hidden{% endif %}"{% if avatar and avatar.current %} disabled{% endif %} src="/assets/images/close.svg">
</li>

<table id="emailsList">
    <thead><tr><th>Email</th><th>Confirmed</th><th>Notifications</th><th>Delete</th></tr></thead>
    {% for number, email in emails %}
        <tr class="middle">
            <td>{{ email.email }}</td>
            <td>{% if email.activation %}<input type="button" value="Confirm" class="mail_activation" data-email="{{ email.email }}"><img loading="lazy" decoding="async" class="hidden spinner inline" src="/img/spinner.svg" alt="Activating {{ email.email }}...">{% else %}<span class="mail_confirmed">âœ…</span>{% endif %}</td>
            <td{% if email.activation %} class="warning"{% endif %}>{% if email.activation %}Confirm address to change setting{% else %}<span class="radio_and_label"><input id="subscription_checkbox_{{ number }}" class="mail_subscription" data-email="{{ email.email }}" type="checkbox"{% if email.subscribed %} checked{% endif %}><label for="subscription_checkbox_{{ number }}">{% if email.subscribed %}Unsubscribe{% else %}Subscribe{% endif %}</label></span><img loading="lazy" decoding="async" class="hidden spinner inline" src="/img/spinner.svg" alt="Changing subscription for {{ email.email }}...">{% endif %}</td>
            <td><input class="mail_deletion" data-email="{{ email.email }}" type="image" src="/img/close.svg" {% if (email.activation and countActivated == 0) or (not email.activation and (emails|length < 2 or countActivated < 2)) %}disabled alt="Can't delete"{% else %}alt="Delete {{ email.email }}"{% endif %}><img class="hidden spinner inline" src="/img/spinner.svg" alt="Removing {{ email.email }}..."></td>
        </tr>
    {% endfor %}
</table>
<form role="form" id="addMailForm" name="addMailForm" autocomplete="on" class="middle">
    <div class="float_label_div">
        <input form="addMailForm" type="email" spellcheck="false" aria-required="false" name="email" id="addMail" placeholder="Email" autocomplete="email" inputmode="email" minlength="1" maxlength="320" pattern="^[a-zA-Z\d.!#$%&'*+\/=?^_`{|}~-]+@[a-zA-Z\d](?:[a-zA-Z\d\-]{0,61}[a-zA-Z\d])?(?:\.[a-zA-Z\d](?:[a-zA-Z\d\-]{0,61}[a-zA-Z\d])?)*$">
        <label for="addMail">Email</label>
    </div>
    <input role="button" form="addMailForm" type="submit" name="addMail[submit]" id="addMail_submit" formaction="/api/uc/emails/add/" formmethod="post" formtarget="_self" value="Add">
    <img id="addMail_spinner" class="hidden spinner" src="/img/spinner.svg" alt="Adding email...">
</form>

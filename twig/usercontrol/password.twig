<form id="password_change">
    <div class="float_label_div">
        <input form="password_change" type="password" required aria-required="true" name="current_password" id="current_password" placeholder="Current password" autocomplete="current-password" inputmode="text" minlength="8" pattern=".{8,}">
        <label for="current_password">Current password</label>
        <div class="showpassword"></div>
    </div>
    <div class="float_label_div">
        <input form="password_change" type="password" required aria-required="true" name="new_password" id="new_password" placeholder="New password" autocomplete="new-password" inputmode="text" minlength="8" pattern=".{8,}">
        <label for="new_password">New password</label>
        <div class="showpassword"></div>
    </div>
    <div id="password_requirement">Only password requirement: at least 8 symbols</div>
    <div class="pass_str_div_visible">New password strength:
        <span class="password_strength">weak</span>
    </div>
    <input role="button" form="password_change" type="submit" name="password[submit]" id="password_submit" formaction="/" formmethod="post" formtarget="_self" value="Change">
    <img id="pw_change_spinner" class="hidden spinner" src="/img/spinner.svg" alt="Changing password...">
</form>

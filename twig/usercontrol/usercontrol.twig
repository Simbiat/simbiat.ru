<vertical-tabs class="vertical_tabs_links">
    <tab-names>
        {% if subServiceName == 'profile' %}<tab-name class="active">Profile</tab-name>{% else %}<a class="nav_tab" href="/uc/profile/">Profile</a>{% endif %}
        {% if subServiceName == 'avatars' %}<tab-name class="active">Avatars</tab-name>{% else %}<a class="nav_tab" href="/uc/avatars/">Avatars</a>{% endif %}

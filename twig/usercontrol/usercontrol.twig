<section>
    {% if subServiceName %}
        <article>
            {% if subServiceName == 'registration' %}
                {{ include('usercontrol/registration.twig')}}
            {% elseif subServiceName == 'activation' %}
                {{ include('usercontrol/activation.twig')}}

<section class="bottomMargin">
    {% if not path %}
        <ul>
            <li><a href="/simplepages/devicedetector/os/">{{ files.os.name }}</a>: {{ files.os.count }} icons</li>
            <li><a href="/simplepages/devicedetector/browser/">{{ files.browser.name }}</a>: {{ files.browser.count }} icons</li>
            <li><a href="/simplepages/devicedetector/app/">{{ files.app.name }}</a>: {{ files.app.count }} icons</li>
            <li><a href="/simplepages/devicedetector/library/">{{ files.library.name }}</a>: {{ files.library.count }} icons</li>
            <li><a href="/simplepages/devicedetector/feedreader/">{{ files.feedreader.name }}</a>: {{ files.feedreader.count }} icons</li>
            <li><a href="/simplepages/devicedetector/pim/">{{ files.pim.name }}</a>: {{ files.pim.count }} icons</li>
            <li><a href="/simplepages/devicedetector/mediaplayer/">{{ files.mediaplayer.name }}</a>: {{ files.mediaplayer.count }} icons</li>
        </ul>
    {% endif %}
</section>
{% if path %}
    <section>
        {{ include('common/elements/iconlist.twig', {icons: files[path].files}, with_context = false) }}
    </section>
{% endif %}

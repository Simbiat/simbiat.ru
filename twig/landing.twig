{% for post in posts %}
    <article>
        <div class="articleHeader">
            <h2 class="articleName" id="post_{{ post.postid }}">{{ post.name }}</h2>
            {{ timeTag(post.created, "d/m/Y H:i", "articleTime") }}
        </div>
        <section class="articleText">{{ sanitize(post.text)|nl2br }}</section>
    </article>
{% endfor %}

<vertical-tabs class="vertical_tabs_links">
    <tab-names>
        <tab-name {% if ffstats.category == 'characters' %}class="active" {% endif %}data-url="/fftracker/statistics/characters">Characters</tab-name>
        <tab-name {% if ffstats.category == 'groups' %}class="active" {% endif %}data-url="/fftracker/statistics/groups">Groups</tab-name>
        <tab-name {% if ffstats.category == 'achievements' %}class="active" {% endif %}data-url="/fftracker/statistics/achievements">Achievements</tab-name>
        <tab-name {% if ffstats.category == 'timelines' %}class="active" {% endif %}data-url="/fftracker/statistics/timelines">Timelines</tab-name>
        <tab-name {% if ffstats.category == 'bugs' %}class="active" {% endif %}data-url="/fftracker/statistics/bugs">Bugs</tab-name>
        <tab-name {% if ffstats.category == 'raw' %}class="active" {% endif %}data-url="/fftracker/statistics/raw">Raw</tab-name>
        <tab-name {% if ffstats.category == 'other' %}class="active" {% endif %}data-url="/fftracker/statistics/other">Other</tab-name>
    </tab-names>
</vertical-tabs>

                {{ include('fftracker/statistics/groups.twig') }}
            {% elseif ffstats.category == 'achievements' %}
                {{ include('fftracker/statistics/achievements.twig') }}
            {% elseif ffstats.category == 'timelines' %}
                {{ include('fftracker/statistics/timelines.twig') }}
            {% elseif ffstats.category == 'bugs' %}
                {{ include('fftracker/statistics/bugs.twig') }}
            {% elseif ffstats.category == 'raw' %}
                {{ include('fftracker/statistics/raw.twig') }}
            {% elseif ffstats.category == 'other' %}
                {{ include('fftracker/statistics/other.twig') }}
            {% endif %}
        </article>
    {% endif %}
</section>

<div id="ff-main" class="article-content centertext">
    <div id="ff_logo_parent">
        <img id="ff_logo_header" src="/img/fftracker/merged-crests/{{pvpteam.crest|slice(0,2)}}/{{pvpteam.crest|slice(2,2)}}/{{pvpteam.crest}}.png">
        {% if freecompany.deleted%}
            <img id="ff_logo_header_deleted" src="/img/fftracker/deleted.png">
        {% endif %}
    </div>
    <div>
        <p>
        {% if pvpteam.deleted%}
            <div id="ff_deleted_notice"><h3>{{pvpteam.name}}</h3></p><p> was deleted from Lodestone on {{pvpteam.deleted}}. Below information is what was avialable on or prior to the deletion date.</div><br>
        {% else %}
            <h3>Name</h3>: <a href="https://eu.finalfantasyxiv.com/lodestone/pvpteam/{{pvpteam.pvpteamid}}/pvpteam.twig" target="_blank">{{pvpteam.name}}</a>
        {% endif %}
        </p>
        {%if pvpteam.oldnames %}
            <details id="ff_oldnames">
                <summary title="Known aliases">
                    <h3>Previous names</h3>
                </summary>
                {% for name in pvpteam.oldnames %}
                    {{name}}{%if not loop.last%},<br>{%endif%}
                {%endfor%}
            </details>
        {%endif%}
        <p><h3>Members</h3>: {{pvpteam.members|length}}</p>
        <p><h3>ID</h3>: {{pvpteam.pvpteamid}}</p>
        <p><h3>Location</h3>: {{pvpteam.datacenter}}</p>
        {%if pvpteam.communityid %}
            <p><h3>Community ID</h3>: <a href="https://eu.finalfantasyxiv.com/lodestone/community_finder/{{pvpteam.communityid}}" target="_blank">{{pvpteam.communityid}}</a></p>
        {% endif %}
        <br>
        {% if pvpteam.formed %}
            <p><h3>Formed</h3>: {{pvpteam.formed}}</p>
        {% endif %}
        <p><h3>Registered</h3>: {{pvpteam.registered}}</p>
        {% if not pvpteam.deleted %}
            <p><h3>Updated</h3>: {{pvpteam.updated}}</p>
        {% endif %}
    </div>
    {% if pvpteam.members|length > 0 %}
        <input type="search" autofocus="" alt="Search" id="fc_member_search" placeholder="Type ID, rank or name to highlight a member">
    {% endif %}
    <div id="ff_members_list">
        {% for rank in pvpteam.levels %}
            <div class="ff_list_level">
                <span>{{rank}}</span>
                {% for member in pvpteam.members %}
                    {% if member.rank==rank %}
                    <a class="ff_list_member" href="/fftracker/character/{{member.characterid}}/{{member.name|url_encode}}/" rank="{{member.rank}}" name="{{member.name}}" id="{{member.characterid}}">
                        <div class="ff_member_front">
                            <img class="avatar" src="/img/fftracker/avatar/{{member.avatar}}c0_96x96.jpg">
                            {%if member.pvprankid!=3%}<img class="ff_member_rank" src="/img/fftracker/pvpranks/{{member.pvprankid}}.png">{%endif%}
                        </div>
                        <div class="ff_member_back">
                            {%if member.pvprankid!=3%}<img class="ff_member_rank" src="/img/fftracker/pvpranks/{{member.pvprankid}}.png">{%endif%}
                            <span>{{member.name}}</span>
                        </div>
                    </a>
                    {% endif %}
                {% endfor %}
                <span>{{rank}}</span>
            </div>
        {% endfor %}
    </div>

    <div id="se_copyright">"(C) SQUARE ENIX CO., LTD. All Rights Reserved. FINAL FANTASY is a registered trademark of Square Enix Holdings Co., Ltd. All material used under license."</div>
</div>
